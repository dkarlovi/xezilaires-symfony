<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
           http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="xezilaires.serializer" class="Xezilaires\Bridge\Symfony\Serializer\ObjectSerializer" public="true">
            <argument type="service" id="serializer"/>
        </service>
        <service id="Xezilaires\Denormalizer" alias="xezilaires.serializer"/>
        <service id="Xezilaires\Serializer" alias="xezilaires.serializer"/>

        <service id="Xezilaires\SpreadsheetIteratorFactory" class="Xezilaires\SpreadsheetIteratorFactory">
            <argument type="service" id="xezilaires.serializer"/>
        </service>

        <service id="Xezilaires\Bridge\Symfony\Command\SerializeCommand"
                 class="Xezilaires\Bridge\Symfony\Command\SerializeCommand">
            <argument type="service" id="Xezilaires\SpreadsheetIteratorFactory"/>
            <argument type="service" id="Xezilaires\Serializer"/>

            <tag name="console.command"/>
        </service>
    </services>
</container>
